<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".Activities.HomePage">

    <RelativeLayout
        android:layout_width="403dp"
        android:layout_height="239dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.419">

        <TextView
            android:layout_width="192dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="64dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="67dp"
            android:gravity="center"
            android:text="Adding Player..."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FF5722"
            android:textSize="34sp" />

        <EditText
            android:id="@+id/name_editText"
            android:layout_width="332dp"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="78dp"
            android:layout_marginEnd="5dp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLength="12"
            android:textColor="@color/gray"
            android:textColorHint="@color/gray"
            android:textColorLink="#00070606" />

        <TextView
            android:id="@+id/close"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="108dp"
            android:layout_marginBottom="1dp"
            android:gravity="bottom"
            android:text="Close"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/gray"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/enter"
            android:layout_width="wrap_content"
            android:layout_height="63dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="0dp"
            android:gravity="bottom"
            android:text="Enter"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/dark_green"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/letters_Entered_Length"
            android:layout_width="48dp"
            android:layout_height="16dp"
            android:layout_below="@+id/name_editText"
            android:layout_alignEnd="@+id/name_editText"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="350dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="0dp"
            android:layout_marginBottom="100dp"
            android:gravity="right"
            android:text="0 / 12"
            android:textColor="#00BCD4" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/player_Icon"
            android:layout_width="51dp"
            android:layout_height="49dp"
            android:layout_above="@+id/add_mutiple_players"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="58dp"
            android:layout_toStartOf="@+id/name_editText"
            android:background="@drawable/icon_player_blue"
            app:civ_border_color="@color/orange"
            app:civ_border_width="1dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="1" />

        <TextView
            android:id="@+id/generic_Name"
            android:layout_width="186dp"
            android:layout_height="35dp"
            android:layout_below="@+id/name_editText"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="115dp"
            android:layout_marginTop="17dp"
            android:layout_marginEnd="102dp"
            android:layout_marginBottom="64dp"
            android:background="@drawable/rounded_textview_different_color"
            android:gravity="center"
            android:text="Generic Name"
            android:textColor="#FF5722"
            android:textSize="22sp" />

        <ImageView
            android:id="@+id/add_mutiple_players"
            android:layout_width="64dp"
            android:layout_height="58dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginBottom="-4dp"
            app:srcCompat="@drawable/icon_add_multiple" />

        <ImageView
            android:id="@+id/edit"
            android:layout_width="10dp"
            android:layout_height="12dp"
            android:layout_above="@+id/add_mutiple_players"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="53dp"
            android:layout_marginTop="116dp"
            android:layout_marginEnd="340dp"
            android:layout_marginBottom="56dp"
            app:srcCompat="@drawable/ic_edit" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>