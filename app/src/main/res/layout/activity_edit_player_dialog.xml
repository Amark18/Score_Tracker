<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="342dp"
        android:layout_height="268dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.421">

        <TextView
            android:id="@+id/letters_Entered_Edit_Player"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_edit"
            android:layout_alignStart="@+id/enter_dialog"
            android:layout_marginStart="-13dp"
            android:layout_marginTop="0dp"
            android:text="0 / 12"
            android:textColor="#00BCD4"
            tools:layout_editor_absoluteX="310dp"
            tools:layout_editor_absoluteY="338dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="18dp"
            android:gravity="center"
            android:text="Edit Player"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="#FF5722"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/close_dialog"
            android:layout_width="66dp"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="72dp"
            android:text="Close"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/gray" />

        <TextView
            android:id="@+id/enter_dialog"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:text="Enter"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/green" />

        <TextView
            android:id="@+id/delete_Player"
            android:layout_width="wrap_content"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:text="Delete"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/red" />

        <EditText
            android:id="@+id/name_edit"
            android:layout_width="250dp"
            android:layout_height="46dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="84dp"
            android:layout_marginEnd="28dp"
            android:backgroundTint="@color/colorPrimary"
            android:ems="10"
            android:hint="Name"
            android:inputType="textPersonName"
            android:maxLength="12"
            android:textColorHint="#00BCD4" />

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/player_Icon_Edit"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_above="@+id/color_slider"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="5dp"
            android:layout_marginTop="82dp"
            android:layout_marginEnd="4dp"
            android:layout_marginBottom="46dp"
            android:layout_toStartOf="@+id/name_edit"
            android:background="@drawable/icon_player_blue"
            app:civ_border_color="@color/orange"
            app:civ_border_width="1dp"
            app:civ_shadow="false"
            app:civ_shadow_radius="1" />

        <TextView
            android:id="@+id/reset_Player"
            android:layout_width="66dp"
            android:layout_height="33dp"
            android:layout_alignTop="@+id/close_dialog"
            android:layout_alignParentStart="true"
            android:layout_marginStart="85dp"
            android:text="Reset"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/yellow" />

        <com.github.naz013.colorslider.ColorSlider
            android:id="@+id/color_slider"
            android:layout_width="327dp"
            android:layout_height="38dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="7dp"
            android:layout_marginBottom="47dp" />

        <TextView
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/name_edit"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="71dp"
            android:layout_marginTop="21dp"
            android:layout_marginEnd="71dp"
            android:gravity="center"
            android:text="Change Text Player Color"
            android:textColor="#FF5722"
            android:textSize="16sp" />

        <ImageView
            android:layout_width="12dp"
            android:layout_height="wrap_content"
            android:layout_above="@+id/add_mutiple_players"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="122dp"
            android:layout_marginEnd="278dp"
            android:layout_marginBottom="46dp"
            app:srcCompat="@drawable/ic_edit" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>